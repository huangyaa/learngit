.userinfo {
  height: 10%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  margin-top:20px;
  width: 128rpx;
  height: 128rpx;
  border-radius: 20%;
}
.content{
  margin-top:30px;
  height: 50%;
  width:100%;
  display: flex;
  flex-direction: column;
}
.basicview{
  width: 100%;
  height: 30px; 
  display: flex;
  flex-direction:row;
  align-items: center;
  background-color: #DBDBDB;
}
.basictext{
  width: 50%;
  height: 20px;
  margin-left:20px;
  margin-top:3px; 
}
.text_class{
  margin-top:10px;
  width: 80%;
  height: 30px; 
  margin-left:30px;
  font-size: 16px;
}
.appraiseClass{
  margin-top:20px;
  height: 40%;
  width:100%;
  display: flex;
  flex-direction: column;
}
.input{
  width: 90%;
  height: 30px; 
  margin: 15px;
  padding-left: 10px;
}
.inputTeacher{
  width: 90%;
  height: 30px; 
  margin: 15px;
  padding-left: 10px;
  border: 1px solid lightgray;
  border-radius: 25px; 
}
.radioText{
  margin-top:10px;
  width: 80px;
  height: 30px; 
  margin-left:20px;
  font-size: 16px;
}
.radio{
  width: 50px;
  height: 30px;
  margin-top: 5px; 
  transform:scale(.8);
}
.payview{
  width: 90%; 
